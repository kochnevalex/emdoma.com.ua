        a(href='#' rel='noffolow')#cabinetAutorizeClose.cabinet__autorize-close Свернуть
            span.arr
        .cabinet__autorize-ttl Настройки
        .form-wrap
            #selectorAuth.selector
                .select-blocks
                    .title
                        a(href='javascript: void(0)', onclick="$('#cityAuth').slideToggle('normal');\
                    $(this).toggleClass('act');\
                    return false;")
                            span
                                | Мариуполь
                            span.arr
                    #cityAuth.list(style='display: none;')
                        noindex
                            form.city-all
                                img(src='http://mariupol.emdoma.com.ua/img/popupArr-gray.png', alt='')
